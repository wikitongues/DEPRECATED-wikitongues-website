#wt_full-partners-list
    list-style-type none
    margin 0 10%
    padding 0
    display grid
    grid-template-columns repeat(auto-fit, minmax(15rem, 1fr))
    grid-gap 10%

.wt_partner
    cursor pointer

.wt_partner-profile
    grid-column span 4
    background $dark-background
    color $text-color-light

    & > .flex-container
        display flex

        & > .wt_partner-profile-image 
            flex-grow 0
            flex-shrink 0
            flex-basis 20vw
            height 20vw
            background white
            border-radius 1em
            vertical-align middle
            display flex
            align-items center
            justify-content center

        & > div
            padding 1em
            margin 1em

            & > a
                color $text-color-light