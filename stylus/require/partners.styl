#wt_full-partners-list
    list-style-type none
    padding 0
    display grid
    grid-template-columns repeat(auto-fit, minmax(15rem, 1fr))

.wt_partner
    cursor pointer
    margin 10%
    display flex
    align-items center
    justify-content center
    grid-column span 1

.wt_partner-profile
    background $dark-background
    color $text-color-light
    max-height 0vh
    opacity 0
    transform scaleY(0)
    transition all 0.5s ease-out

    &.expanded
        max-height 100vh
        opacity 1
        transform scaleY(1)

    & > .flex-container
        display flex

        & > .wt_partner-profile-image 
            flex-grow 0
            flex-shrink 0
            flex-basis 20vw
            height 20vw
            background white
            border-radius 1em
            vertical-align middle
            display flex
            align-items center
            justify-content center

        & > div
            padding 1em
            margin 1em

            & > a
                color $text-color-light