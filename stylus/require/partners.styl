#wt_full-partners-list
    width 90%
    margin auto

// partner logo in grid
.wt_partner
    cursor pointer
    width 23%
    margin 1% .5%
    display inline-block
    vertical-align top

    // carat attached to profile panel
    // &:after
    //     opacity 0
    //     transform translateY(600%)
    //     content ""
    //     background-color transparent
    //     position absolute
    //     height 1em
    //     width 0
    //     border-left 1em solid transparent
    //     border-right 1em solid transparent
    //     border-bottom 1em solid $dark-background

    // make room for profile
    &.selected
        height 600px

    &.selected:after
        opacity 1
        transform none

// expandable partner profile
.wt_partner-profile
    background $dark-background
    color $text-color-light
    max-height 0vh
    transform scaleY(0)
    opacity 0
    // transition transform 0.5s ease-out
    z-index -1
    position absolute
    left 0vw
    width 100vw

    &.expanded
        max-height 100vh
        opacity 1
        z-index auto

    // trigger scaleY animation when row of expanded partner changes
    &.row-expanded
        transform scaleY(1) translateY(-100%)

    // logo
    & > .wt_partner-profile-image 
        height 20vw
        background white
        border-radius 1em
        vertical-align middle
        display inline-block
        width 20vw
        vertical-align top

    & > div
        padding 1em
        margin 1em

    // name, website, and bio
    & > .wt_partner-profile-content
        display inline-block
        width 60vw

        // name and website
        & > .wt_partner-profile-header

            & > *
                display inline-block
                width 50vw

            & > a
                color $text-color-light