body
    &.page-template-template-leadership
        .wt_face-grid
            margin-top 5%
    
    &.page-template-template-donors
        .wt_section-intro
            margin-top 100px
            
        .wt_face-grid
            margin-bottom 5%
            
            &.kickstarter
                margin-top 2.5%

    &.page-template-template-leadership,
    &.page-template-template-contributors,
    &.page-template-template-donors
        &>h1, 
        &>h2
            text-align center

        .wt_who-navigation
            margin 0 auto
            padding 0
            text-align center

            li
                display inline-block
                margin 0 10px
                text-transform uppercase
                font-weight bold

                &:hover,
                &.active
                    &::after
                        content ""
                        width 7px
                        height 7px
                        display block
                        margin 5px auto
                        border-radius 100%

                &:hover
                    &::after
                        background-color #dedede

                &.active
                    &::after
                        background-color #86e9c3

        .wt_page-intro
            margin-bottom 2%

            h1
                margin-top 0

.wt_face-grid
    width 90%
    margin 5% auto 15%
    text-align center

    &.large
        .wt_member
            width 31%
            margin 1% .5%

            h2
                font-size 1em

            .wt_member-location
                margin-top 20px
                font-style italic

            .wt_member-bio
                margin 5px 0 10px
                padding-right 5px

    &.small
        .wt_member
            width 23%
            margin 1% .5%
            
            >*
                display inline-block
                vertical-align middle
            
            .wt_member-photo
                width 20% !important
                padding-bottom 20% !important
                margin-bottom 0 !important
                border-radius 100%
            
            .wt_member-information
                width 78% !important
                font-size 12px !important
                padding-left 10px !important
                box-sizing border-box !important
                
                h2
                    font-size 12px !important
                
                .wt_member-credentials
                    display none !important
                
                .wt_member-bio
                    display none !important
                    
    &.names-only
        .wt_member
            width 24%
            margin 0.5% 0

            .wt_member-photo
                display none
            
            .wt_member-information
                text-align center
                
                h2
                    font-size 12px !important
                    font-weight normal !important
        
        &.kickstarter
            .wt_member
                width 19%
                margin-bottom 0
                
                .wt_member-information
                    h2
                        font-size 10px !important

    .wt_member
        display inline-block
        vertical-align top
        text-align left

        .wt_member-photo
            width 100%
            padding-bottom 100%
            background-size cover !important
            margin-bottom 10px

            &.empty
                background-color #86e9c3 // if no photo
        
    .pagination
        margin-top 5%
        
        a, span
            width initial
            margin 0 10px
            font-weight bold
            
        .current
            color #86e9c3

@media only screen and (max-width: 979px)
    body
        &.page-template-template-leadership,
        &.page-template-template-contributors,
        &.page-template-template-donors
            h1
                margin-top 10%
                
    .wt_who-navigation
        font-size 1rem
        
        li
            &.active
                &:after
                    background #000 !important
                    
    .wt_face-grid
        font-size 1rem !important

        &.large,
        &.small
            .wt_member
                width 48% !important
                margin 1.5% .5% !important

        &.names-only
            .wt_member
                width initial !important
                margin 1.5% !important
