body
    &.page-template-template-leadership,
    &.page-template-template-contributors,
    &.page-template-template-donors
        .wt_who-navigation
            margin 0 auto
            padding 0
            text-align center
            
            li
                display inline-block
                margin 0 10px  
                text-transform uppercase
                
                &:hover,
                &.active
                    border-bottom 1px solid              

        .wt_page-intro
            margin-bottom 2%
                        
            h1
                margin-top 0

.wt_face-grid
    width 90%
    margin auto
    
    &.large
        .wt_member
            width 31%
            margin 1% .5%
    
    &.small
        .wt_member
            width 23%
            margin 1% .5%
    
    &.names-only
        columns 3
        
        .wt_member
            display block
            
            .wt_member-photo
                display none
    
    .wt_member
        display inline-block
        vertical-align top
        
        .wt_member-photo
            width 100%
            padding-bottom 100%
            background-size cover !important
            margin-bottom 10px
            
            &.empty
                background-color #eee // if no photo
        
        .wt_member-credentials
            font-weight 600

@media only screen and (max-width: 979px)
    .wt_face-grid
        font-size 1rem !important
        
        &.large,        
        &.small
            .wt_member
                width 48% !important
                margin 1.5% .5% !important
        
        &.names-only
            .wt_member
                margin-bottom 15px
    