/*------------------------------------*\
    HEADER
    header.php
\*------------------------------------*/

/*
    Main header flexbox
    3 children: div.logo img, nav.nav ul, nav.calls-to-action ul
*/

.header
    z-index 10
    position fixed
    display flex
    top 0
    width 100% // Using %: using the vw unit overflows on the x axis

    &.fixed
        position fixed !important
        height 50px

    &.background
        &::before
            content ""
            z-index -1
            position absolute
            width 100vw
            height 50px
            background white

        ul
            li
                a
                   color $text-color

            &.sub-menu
                background white

.nav
    /*
    * Horizontal scroll flexbox
    * https://iamsteve.me/blog/entry/using-flexbox-for-horizontal-scrolling-navigation
    */
    display flex
    width 100%
    flex-wrap nowrap
    overflow-x auto
    -webkit-overflow-scrolling touch // smooth scrolling on IOS devices
    -ms-overflow-style none // hide scrollbar in Edge

// Hide scrollbar on webkit browsers
.nav::-webkit-scrollbar
    display none

// The scroll bar can not be hidden in Firefox (Gecko) using CSS as of 2018
// See: https://stackoverflow.com/a/6165489/7770081
// Possible solutions: https://stackoverflow.com/a/16671476/7770081

// Don't let flex children shrink to toggle scroll
.nav > *
    flex 0 0 auto

/*
* End horizontal scroll
*/

// Calls to action aligned to the right
.nav ul:last-child
    margin-left auto

// Logo size
.logo
    width 48px
    height 48px
    margin 0 1rem

.logo img
    border-radius 0 0 50% 50%
    float left

/*
    Secondary header flexboxes
    Each of the two nav is a flexbox, each link is a flex item
*/

.header
    ul
        list-style-type none
        margin 0
        padding 0
        display flex

        // Position nav items
        li
            font-weight bold
            text-transform uppercase
            letter-spacing 0.1rem
            text-align center

            a
                padding 1.18rem 1rem 1rem 1rem

// Dropdown nav
.sub-menu
    flex-direction column
    visibility hidden
    line-height 0.8

    li
        font-size 1.25rem

.menu-item-has-children:hover .sub-menu
    visibility visible

/*
    Links color
 */

.header a
    color $text-color
    -webkit-transition color .2s ease-in-out;
    -moz-transition color .2s ease-in-out;
    -ms-transition color .2s ease-in-out;
    -o-transition color .2s ease-in-out;
    transition color .2s ease-in-out;

// White if over the banner image
body
    &.home .header a,
    &.page-template-template-donate .header a,
    &.page-template-template-form .header a,
    &.page-template-template-volunteers a
        color $text-color-light
        display inline-block

/*------------------------------------*\
    BANNERS
    components/banner.php
    components/form-banner.php
    components/donate-banner.php
\*------------------------------------*/

/* Banner and Form Banner */

.wt_banner, .wt_form-banner
    position relative
    width 100%
    height 98vh
    margin-top -5rem // Position banner on top
    display flex
    align-items center
    background-size cover !important
    background-attachment fixed !important

    &:before
        content ""
        background-color transparent
        position absolute
        height 0
        left 0
        bottom 0
        border-left 100vw solid transparent
        border-bottom 100px solid white
        z-index 5

    & > *
        flex 1

.wt_banner-message,
.wt_form-banner-message
    width 90%
    max-width 500px
    margin 0 10rem 0 auto

    h1
        font-size 7rem
        color $text-color-light
        text-align right
        font-weight bold
        text-transform uppercase

.wt_banner-message .wt_cta
    margin 2rem 0 0 auto

/* donate banner */

.wt_donate-banner
    position relative
    width 100%
    height 110vh
    margin-top -5rem // Position banner on top
    // align-items center
    background-size cover !important
    background-attachment fixed !important

    .wt_donate-banner-content
        position absolute;
        top 50%;
        right 5rem;
        -webkit-transform translateY(-50%)
        -ms-transform translateY(-50%)
        -o-transform translateY(-50%)
        transform translateY(-50%)
        background #fff;
        width 423px
        padding 2rem 3rem 0
        border-radius 3px;
        text-align center;

        h1
            font-size 2rem

.wt_banner,
.wt_donate-banner
    .wt_banner-image-caption
        position absolute
        color $text-color-light
        font-weight 700
        letter-spacing 0.1em

/*------------------------------------*\
    ALERT
    components/alert.php
\*------------------------------------*/

.wt_alert
    position fixed
    bottom -100%
    z-index 999999 !important
    display flex
    justify-content flex-start
    align-items flex-start
    background-color $alert-color
    -webkit-transition .33s bottom ease-in-out
    -o-transition .33s bottom ease-in-out
    transition .33s bottom ease-in-out
    width 100%
    height 150px

    &.slide-in
        bottom 0

    img
        flex unset
        height 100%
        width auto
        margin-right 30px
        border-radius 0

    button:focus
        outline none

.wt_alert-message
    max-width 60rem
    padding 1.5rem

@media only screen and (max-width: 800px)
    .wt_alert-message > p
        display none


.wt_close-module
    margin-left auto
    position relative
    top 0rem
    right 0rem
    border none
    background-color transparent
    font-size 3rem

/*------------------------------------*\
    SECTION
    components/section.php
\*------------------------------------*/

.wt_page-section
    position relative
    margin-bottom 5%

    .wt_section-content
        position relative
        display flex

        > *
            flex 1
            margin auto

        .wt_section-message
            padding 6rem

            *
                max-width 650px

            h1
                margin 0 auto 2rem
                text-align left
                font-size 5rem
                letter-spacing 0.2rem
                line-height 6rem
                text-transform uppercase

            p
                margin auto

            .wt_cta
                width 90%
                box-sizing border-box
                margin-top 3rem
                text-transform uppercase
                letter-spacing .1rem

    .wt_featured-items
        max-width 1460px
        margin 5% auto 0

// Switch image and message at each new section
.wt_page-section
    .wt_section-image
        position relative

        .wt_section-image-caption
            font-weight 700
            font-size 1.5rem
            letter-spacing 0.1em
            transform translateX(-82px) translateY(-140px) rotateZ(-90deg)
            margin 0
            position absolute
            color white

    &:nth-of-type(odd)
        .wt_section-image
            img
                width 100%
                height auto
                border-top-left-radius 0
                border-bottom-left-radius 0

    &:nth-of-type(even)
        .wt_section-image
            padding 2rem 0 2rem 2rem

            img
                width 100%
                height auto
                border-top-right-radius 0
                border-bottom-right-radius 0

        .wt_section-message
            order -1

// typography reduction on laptop screens
@media only screen and (max-width: 1280px)
    .wt_page-section
        .wt_section-content
            .wt_section-message
                h1
                    margin-bottom 1rem
                    font-size 3rem
                    line-height 4rem

                .wt_cta
                    margin-top 2rem
                    padding 2rem

        .wt_featured-items
            font-size 1.25rem

// Single column and remove image/message switch on smaller screens
@media only screen and (max-width: 979px)
    .wt_page-section
        .wt_section-content
            flex-direction column

            .wt_section-message
                &:nth-of-type(even)
                    order 1

                &:nth-of-type(odd)
                    order -1

            .wt_section-image
                padding 0

                img
                    width 100%
                    border-radius 0 !important

/*------------------------------------*\
    FEATURED ITEMS
    components/featured-item.php
\*------------------------------------*/

// Display as a flexbox
.wt_featured-items
    display flex
    justify-content space-between
    padding 5%

.wt_featured-item // Children
    margin 2rem
    background-color $text-color-light
    border-radius 1rem
    overflow hidden
    // Featured item content flexbox
    display flex
    flex-direction column

// On smaller screens, show items in a single column
@media only screen and (max-width: 800px)
    .wt_featured-items
        flex-direction column

// Each featured item has three children:
// 1. A link to youtube with a background image
// 2. An h2 title
// 3. A paragraph with intro text

// Arbitrary height to display image
// Might want to switch to image instead of background image
.wt_featured-item
