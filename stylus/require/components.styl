body
    // padding-top 5rem
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    display inline-block

/*------------------------------------*\
    HEADER
    header.php
\*------------------------------------*/

/*
    Main header flexbox
    3 children: div.logo img, nav.nav ul, nav.calls-to-action ul
*/

.header
    z-index 10
    position fixed
    top 0
    width 100% // Using %: using the vw unit overflows on the x axis

    &.fixed
        position fixed !important
        height 50px

    &.background
        &::before
            content ""
            z-index -1
            position absolute
            width 100%
            height 50px
            background white
            -webkit-box-shadow 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12)
            box-shadow 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12)

        ul
            li
                a
                   color $text-color

            &.sub-menu
                background white

.nav
    /*
    * Horizontal scroll flexbox
    * https://iamsteve.me/blog/entry/using-flexbox-for-horizontal-scrolling-navigation
    */
    width 100%
    overflow-x auto
    -webkit-overflow-scrolling touch // smooth scrolling on IOS devices
    -ms-overflow-style none // hide scrollbar in Edge

// Hide scrollbar on webkit browsers
.nav::-webkit-scrollbar
    display none

// The scroll bar can not be hidden in Firefox (Gecko) using CSS as of 2018
// See: https://stackoverflow.com/a/6165489/7770081
// Possible solutions: https://stackoverflow.com/a/16671476/7770081

/*
* End horizontal scroll
*/

// Calls to action aligned to the right
.nav ul:last-child
    margin-left auto
    margin-right 1rem

$logo-height = 48px
$logo-width = 48px

// Logo size
.logo
    width $logo-height
    height $logo-width
    margin 0 1rem
    display inline-block
    float left

.logo img
    border-radius 0 0 50% 50%
    float left

/*
    Secondary header flexboxes
    Each of the two nav is a flexbox, each link is a flex item
*/

.header
    ul
        list-style-type none
        margin 0
        padding 0
        display inline-block
        vertical-align top

        &:first-of-type
            float left

        &:last-of-type
            float right


        // Position nav items
        li
            font-weight bold
            text-transform uppercase
            letter-spacing 0.1rem
            text-align center
            display inline-block
            line-height $logo-height

            a
                padding 0 0 1rem 1rem

// Dropdown nav
.sub-menu
    flex-direction column
    visibility hidden
    line-height 0.8

    li
        font-size 1.25rem

.menu-item-has-children:hover .sub-menu
    visibility visible

/*
    Links color
 */

.header a
    color $text-color
    -webkit-transition color .2s ease-in-out;
    -moz-transition color .2s ease-in-out;
    -ms-transition color .2s ease-in-out;
    -o-transition color .2s ease-in-out;
    transition color .2s ease-in-out;

// White if over the banner image
body
    &.home .header a,
    &.page-template-template-donate .header a,
    &.page-template-template-form .header a,
    &.page-template-template-volunteers .header a
    &.page-template-template-about .header a
        color $text-color-light
        display inline-block

// Fit the white navbar background on smaller screens
@media all and (max-width:750px)
    .background:before
        height 100px !important

@media all and (max-width:400px)
    .background:before
        height 200px !important

/*------------------------------------*\
    BANNERS
    components/banner.php
    components/form-banner.php
    components/donate-banner.php
\*------------------------------------*/

/* Banner and Form Banner */

.wt_banner, .wt_form-banner
    position relative
    width 100%
    display inline-block
    align-items center
    background-size cover !important
    background-attachment fixed !important

    &:before
        content ""
        background-color transparent
        position absolute
        height 0
        left 0
        bottom 0
        border-left 100% solid transparent
        border-bottom 100px solid white
        z-index 5

    & > *
        flex 1

    .wt_banner-image-caption
        text-shadow 0 0 30px #000

.wt_banner-message,
.wt_form-banner-message
    width 90%
    margin 0 10rem 0 auto

    h1
        font-size 7rem
        color $text-color-light
        text-align right
        font-weight bold
        text-transform uppercase
        margin 20rem 0 5rem 0

.wt_banner-message
    h1
        text-shadow 0 0 100px #000

    .wt_cta
        margin 2rem 0 2rem auto
        max-width 500px
        position relative
        z-index 6

/* donate banner */

.wt_donate-banner
    // position relative
    width 100%
    min-height 90vh
    padding 100px 0
    background-size cover !important
    background-attachment fixed !important

    .wt_donate-banner-content
        // display none
        margin 0 50px 0 auto
        background #fff;
        width 423px
        padding 2rem 3rem 0
        border-radius 3px;
        text-align center;

        h1
            font-size 2rem

.wt_banner,
.wt_donate-banner
    .wt_banner-image-caption
        position absolute
        color $text-color-light
        font-weight 700
        letter-spacing 0.1em

@media all and (max-width:979px)
    .wt_banner, .wt_form-banner
        background-attachment: initial !important;
        height 500px

    .wt_banner-message,
    .wt_form-banner-message
        h1
            font-size 3rem

        .wt_cta
            width 75%
            padding 2rem 1rem
            font-size 1.5rem

/*------------------------------------*\
    ALERT
    components/alert.php
\*------------------------------------*/

.wt_alert
    position fixed
    bottom -100%
    z-index 999999 !important
    display flex
    justify-content flex-start
    align-items flex-start
    background-color $alert-color
    -webkit-transition .33s bottom ease-in-out
    -o-transition .33s bottom ease-in-out
    transition .33s bottom ease-in-out
    width 100%
    height 150px

    &.slide-in
        bottom 0

    img
        flex unset
        height 100%
        width auto
        margin-right 30px
        border-radius 0

    button:focus
        outline none

.wt_alert-message
    max-width 60rem
    padding 1.5rem

@media only screen and (max-width: 800px)
    .wt_alert-message > p
        display none


.wt_close-module
    margin-left auto
    position relative
    top 0rem
    right 0rem
    border none
    background-color transparent
    font-size 3rem

/*------------------------------------*\
    SECTION
    components/section.php
\*------------------------------------*/

.wt_page-section
    position relative
    margin-bottom 5%

    .wt_section-content
        position relative

        > *
            margin auto

        .wt_section-image
            display inline-block
            max-width 42%

        .wt_section-message
            display inline-block
            vertical-align top
            max-width 50%
            padding 6rem 3rem 6rem 3rem

            *
                max-width 650px

            h1
                margin 0 auto 2rem
                text-align left
                font-size 5rem
                letter-spacing 0.2rem
                line-height 6rem
                text-transform uppercase

            p
                margin auto

            .wt_cta
                width 90%
                box-sizing border-box
                margin-top 3rem
                text-transform uppercase
                letter-spacing .1rem

    .wt_featured-items
        max-width 1460px
        margin 5% auto 0


// Switch image and message at each new section
.wt_page-section

    .wt_section-content
        min-height 500px

    .wt_section-image
        position relative

        .wt_section-image-caption
            position absolute
            top 0
            font-size 1.25rem
            letter-spacing 0.1em
            margin 5px 10px
            position absolute
            color white
            text-shadow 0 0 30px #000

    &:nth-of-type(odd)
        .wt_section-image
            float left

            img
                width 100%
                height auto
                border-top-left-radius 0
                border-bottom-left-radius 0

            .wt_section-image-caption
                left 0

        .wt_section-message
            float right

    &:nth-of-type(even)
        .wt_section-image
            // margin 2rem 0 2rem 2rem
            float right

            img
                width 100%
                height auto
                border-top-right-radius 0
                border-bottom-right-radius 0

            .wt_section-image-caption
                right 0

        .wt_section-message
            float left
            order -1

// typography reduction on laptop screens
@media only screen and (max-width: 1280px)
    .wt_page-section
        .wt_section-content
            .wt_section-message
                h1
                    margin-bottom 1rem
                    font-size 3rem
                    line-height 4rem

                .wt_cta
                    margin-top 2rem
                    padding 2rem

        .wt_featured-items
            font-size 1.25rem

// Single column and remove image/message switch on smaller screens
@media only screen and (max-width: 979px)
    .wt_page-section
        .wt_section-content
            .wt_section-message
                max-width 100%

                &:nth-of-type(even)
                    order 1

                &:nth-of-type(odd)
                    order -1

            .wt_section-image
                max-width 100%
                padding 0

                img
                    width 100%
                    border-radius 0 !important

/*------------------------------------*\
    FEATURED ITEMS
    components/featured-item.php
\*------------------------------------*/

// Display as a flexbox
.wt_featured-items
    padding 5%

.wt_featured-item // Children
    margin 2rem
    background-color $text-color-light
    border-radius 1rem
    overflow hidden
    // Featured item content flexbox
    display inline-block
    -webkit-box-shadow 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12)
    box-shadow 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12)

// Each featured item has three children:
// 1. A link to youtube with a background image
// 2. An h2 title
// 3. A paragraph with intro text

// Arbitrary height to display image
// Might want to switch to image instead of background image
.wt_featured-item
    .wt_featured-item-image
        height 20rem
        background-size cover !important
        width 100%

    h2
        padding 2rem 2rem 0 2rem

    p
        padding 0 2rem 2rem 2rem

.wt_featured-items-button
    display inline-block
    width 6rem

    button 
        background-color $alert-color
        padding 0.5rem 2rem 0.5rem 2rem
        border-radius 4rem
        border none
        color $text-color
        font-size 4rem
        transform translateY(-250px)

/*------------------------------------*\
    PAGE INTRO
    components/page-intro.php
\*------------------------------------*/

.wt_page-intro
    max-width 60rem
    margin 10% auto
    padding 2rem // Space out from browser boundaries on mobile

/*------------------------------------*\
    FOOTER
    footer.php
\*------------------------------------*/

.footer
    margin-top 150px
    background-color $dark-background
    color $text-color-light
    padding 0 2rem 2rem 2rem
    box-sizing border-box
    line-height 1.5
    display inline-block
    width 100%

    .footer-logo
        display inline-block
        float left
        margin-top -40px
        position relative
        z-index 10

        .logo-img
            float left
            vertical-align middle
            width 35px
            height auto
            border-radius 100%

        span
            padding-left 1rem
            font-weight 700
            letter-spacing 0.05rem
            text-transform uppercase
            float left
            margin-top 1rem

    .footer-navigation
        width 100%
        float left
        display inline-block
        margin 2rem 0

        ul
            display inline-block
            list-style-type none
            padding 0
            margin 0

            &:first-of-type
                float left

            &:last-of-type
                float right
                margin-left auto

            li
                display inline-block
                margin-right 1.5rem
                line-height 1.5

            .sub-menu
                visibility visible
                display inline-block
                float left

                li
                    float left
                    clear both

                    a
                        color $footer-offblue
                        font-size 1.5rem

    .legal
        width 100%
        margin-bottom 0
        color $footer-offblue
        display inline-block

        a
            display inline

.footer a
    color $text-color-light
    display block

@media all and (max-width:979px)
    .footer
        margin-top 1800px

        .footer-navigation
            ul
                display block

@media all and (max-width:450px)
    .footer
        margin-top 1200px