.wt_single-videos
    &__intro
    	max-width none !important
    	text-align center
    	
    &__body
        width 90%
        max-width 750px
        margin auto
        text-align center
        font-size 1.3rem
    	
        h3
            margin 3% auto 0

	    a
	    	color #6eb0ff
	    	
	    	&:hover
	    		text-decoration underline

    &__iframe
        position relative
        overflow hidden
        padding-top 56.25%
        
        iframe
            position absolute
            width 100%
            height 100%
            top 0
            left 0
            border 0
    
    &__description
        width 100%
        max-width 650px
        margin auto
            
.pagination
	margin-bottom 5% !important

@media all and (max-width:768px)
    .wt_single-videos
        &__intro
            margin 15% auto 5% !important
