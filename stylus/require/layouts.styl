/*------------------------------------*\
    HEADER
\*------------------------------------*/

.header
    display flex

.logo
    width 50px

.nav ul, .calls-to-action ul
    list-style-type none
    margin 0
    padding 0
    display flex

.calls-to-action
    margin-left auto

/*------------------------------------*\
    PARTNERS LIST
\*------------------------------------*/

#wt_full-partners-list
    list-style-type none
    margin 0
    padding 0
    display grid
    grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
    column-gap 2rem
    row-gap 2rem
