body
    padding-top 5rem
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;

/*------------------------------------*\
    HEADER
    header.php
\*------------------------------------*/

/*
    Main header flexbox
    3 children: div.logo img, nav.nav ul, nav.calls-to-action ul
*/

.header
    width 100% // Using %: using the vw unit overflows on the x axis
    position absolute
    top 0
    display flex

.nav
    /*
    * Horizontal scroll flexbox
    * https://iamsteve.me/blog/entry/using-flexbox-for-horizontal-scrolling-navigation
    */
    display flex
    width 100%
    flex-wrap nowrap
    overflow-x auto
    -webkit-overflow-scrolling touch // smooth scrolling on IOS devices
    -ms-overflow-style none // hide scrollbar in Edge

// Hide scrollbar on webkit browsers
.nav::-webkit-scrollbar
    display none

// The scroll bar can not be hidden in Firefox (Gecko) using CSS as of 2018
// See: https://stackoverflow.com/a/6165489/7770081
// Possible solutions: https://stackoverflow.com/a/16671476/7770081

// Don't let flex children shrink to toggle scroll
.nav > *
    flex 0 0 auto

/*
* End horizontal scroll
*/

// Calls to action aligned to the right
.nav ul:last-child
    margin-left auto

// Logo size
.logo
    width 5rem
    margin 0 1rem

.logo img
    border-radius 0 0 50% 50%

/*
    Secondary header flexboxes
    Each of the two nav is a flexbox, each link is a flex item
*/

.header ul
    list-style-type none
    margin 0
    padding 0
    display flex

// Position nav items
.header li
    margin 1rem
    font-weight bold

// Dropdown nav
.sub-menu
    flex-direction column
    visibility hidden
    line-height 0.8

.menu-item-has-children:hover .sub-menu
    visibility visible

/*
    Links color
 */

.header a
    color $text-color

// White if over the banner image
body.home .header a, body.page-template-template-donate .header a
    color $text-color-light

/*------------------------------------*\
    BANNER
    components/banner.php
    components/form-banner.php
\*------------------------------------*/

.wt_banner
    width 100%
    height 100vh
    margin-top -5rem // Position banner on top
    display flex
    align-items center

.wt_banner > *
    flex 1
    margin-left 10%
    max-width 50rem // In case there is only one child, leave half of the screen blank

.wt_banner-message h1
    color $text-color-light
    text-align left
    font-weight bold

.wt_banner-message .wt_cta
    margin: 2rem 0

/*------------------------------------*\
    ALERT
    components/alert.php
\*------------------------------------*/

.wt_alert
    display flex
    justify-content flex-start
    align-items flex-start
    background-color $alert-color
    padding 2rem

.wt_alert-message
    max-width 60rem

.wt_close-module
    margin-left auto
    position relative
    top -1rem
    right -1rem
    border none
    background-color transparent
    font-size 3rem

/*------------------------------------*\
    FEATURED PARTNERS
    front-page.php
\*------------------------------------*/

ul.wt_featured-partners
    list-style-type none
    width 80vw
    margin 5% auto
    padding 0
    display flex
    justify-content space-around

ul.wt_featured-partners li
    flex 1
    max-width 15rem
    margin 2rem

/*------------------------------------*\
    SECTION
    components/section.php
\*------------------------------------*/

.wt_page-section
    display flex
    margin-bottom 5%

.wt_page-section > *
    flex 1
    padding 2rem
    margin auto

// Switch image and message at each new section
section:nth-child(even) .wt_section-message
    order -1

// Single column and remove image/message switch on smaller screens
@media only screen and (max-width: 800px)
    .wt_page-section
        flex-direction column
    
    section:nth-child(even) .wt_section-message
        order 1

/*------------------------------------*\
    FEATURED ITEMS
    components/featured-item.php
\*------------------------------------*/

// Display as a flexbox
.wt_featured-items
    display flex
    justify-content space-between
    background-color $highlight-color
    padding 5%
    margin-bottom 10%

.wt_featured-item // Children
    margin 2rem
    background-color $text-color-light
    border-radius 1rem
    overflow hidden
    // Featured item content flexbox
    display flex
    flex-direction column

// On smaller screens, show items in a single column
@media only screen and (max-width: 800px)
    .wt_featured-items
        flex-direction column

// Each featured item has three children:
// 1. A link to youtube with a background image
// 2. An h2 title
// 3. A paragraph with intro text

// Arbitrary height to display image
// Might want to switch to image instead of background image
.wt_featured-item > a
    height 20rem

.wt_featured-item-image // Child of a
    height 100%
    width 100%

.wt_featured-item > h2
    padding 2rem 2rem 0 2rem
    
.wt_featured-item > p
    padding 0 2rem 2rem 2rem

/*------------------------------------*\
    PAGE INTRO
    components/page-intro.php
\*------------------------------------*/

.wt_page-intro
    max-width 60rem
    margin 10% auto

/*------------------------------------*\
    PARTNERS LIST
    template-partners.php
\*------------------------------------*/

#wt_full-partners-list
    list-style-type none
    margin 0 10%
    padding 0
    display grid
    grid-template-columns repeat(auto-fit, minmax(15rem, 1fr))
    grid-gap 10%

/*------------------------------------*\
    WHO WE ARE
    template-leadership.php
    template-community.php
\*------------------------------------*/

.wt_two-column-face-grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(40rem, 1fr))
    margin 0 10%
    grid-gap 10%

.wt_three-column-face-grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(30rem, 1fr))
    margin 0 10%
    grid-gap 10%

.wt_names-list
    display grid
    grid-template-columns repeat(auto-fit, minmax(15rem, 1fr))
    margin 0 10%
    grid-gap 10%

.wt_member
    display flex

.wt_member > *
    flex 1
    margin 1rem

/*------------------------------------*\
    VIDEO SUBMISSION FORM
    DONATE PAGE AND FORM
    components/form-banner.php
\*------------------------------------*/

.wt_form-banner
    max-width 100%
    margin 2rem
    min-height 100vh
    display flex
    align-items center

.wt_form-banner > *
    flex 1
    max-width 100%

.wt_form-banner-message h1
    color $text-color-light
    text-align left
    font-weight bold

input[type=text], input[type=email], textarea
    max-width 100%

/*------------------------------------*\
    FOOTER
    footer.php
\*------------------------------------*/

.footer
    background-color $dark-background
    color $text-color-light
    padding 2rem
    bottom 0

.footer a
    color $text-color-light
