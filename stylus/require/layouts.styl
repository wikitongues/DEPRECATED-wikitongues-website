body
    padding-top 5rem


/*------------------------------------*\
    HEADER
    header.php
\*------------------------------------*/

/*
    Main header flexbox
    3 children: div.logo img, nav.nav ul, nav.calls-to-action ul
*/

.header
    display flex
    width 100% // Using %: using the vw unit overflows on the x axis
    position absolute
    top 0

// Calls to action aligned to the right
.calls-to-action
    margin-left auto

// Logo size
.logo
    width 5rem
    margin 0 1rem

.logo img
    border-radius 0 0 50% 50%

/*
    Secondary header flexboxes
    Each of the two nav is a flexbox, each link is a flex item
*/

.header ul
    list-style-type none
    margin 0
    padding 0
    display flex

// Position nav items
.header li
    margin 1rem
    font-weight bold

// Dropdown nav
.sub-menu
    flex-direction column
    visibility hidden

.sub-menu li
    margin-left 0 // Cancel spacing from .header li

.menu-item-has-children:hover .sub-menu
    visibility visible


/* NO BROWSER SUPPORT
// White text if over a banner
.header:has(+ .wt_banner) a
    color $text-color-light
*/

.header a
    color $text-color-light

/*------------------------------------*\
    BANNER
    components/banner.php
    components/form-banner.php
\*------------------------------------*/

.wt_banner
    width 100%
    height 100vh
    margin-top -5rem // Position banner on top
    display flex
    align-items center

.wt_banner > *
    flex 1
    margin 10rem
    max-width 50% // In case there is only one child, leave half of the screen blank

.wt_banner-message h1
    color $text-color-light
    text-align left
    font-weight bold

.wt_banner-message .wt_cta
    margin: 2rem 0

/*------------------------------------*\
    ALERT
    components/alert.php
\*------------------------------------*/

.wt_alert
    display flex
    justify-content flex-start
    background-color $alert-color
    padding 1rem

.wt_alert-message
    max-width 60rem

.wt_close-module
    margin-left auto

/*------------------------------------*\
    FEATURED PARTNERS
    front-page.php
\*------------------------------------*/

ul.wt_featured-partners
    list-style-type none
    padding 0
    display flex
    justify-content space-around

ul.wt_featured-partners li
    flex 1
    max-width 20rem
    margin 2rem

/*------------------------------------*\
    SECTION
    components/section.php
\*------------------------------------*/

.wt_page-section
    display flex

.wt_page-section aside
    flex 1
    padding 2rem

// Switch image and message at each new section
section:nth-child(even) .wt_section-message
    order -1

/*------------------------------------*\
    FEATURED ITEMS
    components/featured-item.php
\*------------------------------------*/

// Display as a flexbox
.wt_featured-items
    display flex
    justify-content space-between
    background-color $highlight-color

.wt_featured-item // Children
    margin 4rem
    padding 2rem
    background-color white
    border-radius 1rem

/*------------------------------------*\
    PAGE INTRO
    components/page-intro.php
\*------------------------------------*/

.wt_page-intro
    max-width 60rem
    margin 10rem auto

/*------------------------------------*\
    PARTNERS LIST
    template-partners.php
\*------------------------------------*/

#wt_full-partners-list
    list-style-type none
    margin 0 10rem
    padding 0
    display grid
    grid-template-columns repeat(auto-fit, minmax(15rem, 1fr))
    column-gap 10rem
    row-gap 10rem

/*------------------------------------*\
    WHO WE ARE
    template-leadership.php
    template-community.php
\*------------------------------------*/

.wt_two-column-face-grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(40rem, 1fr))
    margin 0 10rem
    column-gap 10rem
    row-gap 10rem

.wt_three-column-face-grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(30rem, 1fr))
    margin 0 10rem
    column-gap 10rem
    row-gap 10rem

.wt_names-list
    display grid
    grid-template-columns repeat(auto-fit, minmax(15rem, 1fr))
    margin 0 10rem
    column-gap 10rem
    row-gap 10rem

.wt_member
    display flex

.wt_member > *
    flex 1
    margin 1rem

/*------------------------------------*\
    FOOTER
    footer.php
\*------------------------------------*/

.footer
    background-color $dark-background
    color $text-color-light
    padding 2rem
    bottom 0

.footer a
    color $text-color-light
