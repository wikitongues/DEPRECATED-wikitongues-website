@media all and (max-width:970px)
    body
        &.page-template-template-form
            .wt_form-banner
                .wt_form-banner-message
                    margin 0 auto
                    
                    h1
                        font-size 5rem
                        text-align center
                        
            .wt_form-banner-form,
            .main
                width 100%
                float none
            
            .wt_form-banner-form
                margin-top 0
                
                .wt_form-section
                    .wt_form-description
                        width 100%
                        position relative
                    
                    h2,
                    p
                        width 100%