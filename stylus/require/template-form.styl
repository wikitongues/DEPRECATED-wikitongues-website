label
    font-size $small-text-size

label > span
    font-size $text-size

input[type=text], input[type=email], input[type=url]
    border none
    border-bottom 1px solid LightGrey
    margin-top 1rem

input[type=text]:focus, input[type=email]:focus, input[type=url]:focus
    border-color $text-color

textarea
    border 1px solid LightGrey
    border-radius 0.5rem
    // padding 1rem // causes the textarea to overflow
    margin-top 1rem
    resize none

textarea:focus
    border-color $text-color

input[type=button], input[type=submit], input[type=reset]
    font-size 1.5rem
    /*background-color transparent*/
    border 1px solid LightGrey
    border-radius 0.5rem
    padding 1rem
    margin-top 1rem
    text-decoration none
    cursor pointer

input[type=button]:hover, input[type=submit]:hover, input[type=reset]:hover
    border-color $text-color

/*
** For general banner layout styles refer to BANNER
*/

body
    &.page-template-template-form
        width 100% // body width fix
        
        .wt_form-banner-message
                margin 0 auto 0 10rem
                
                h1
                    text-align left
                    
        .wt_form-banner-form
            float right
            background-color $text-color-light
            padding 2rem 4rem 8rem 4rem
            border-radius 2rem 0 0 2rem
            margin-top -80vh // margin from nav
            width 50%
            box-sizing border-box
            
            &>h1
                margin-top 0
            
            .wt_form-section
                position relative
                margin-top 50px
                
                // first div in the form is injected js
                &nth-of-type(2)
                    margin-top 0
                
                input,
                textarea
                    width 100%
                    padding-bottom 5px
                    font-size 1.5rem
                    
                    &:focus
                        outline none
                
                h2
                    width 45%
                    margin 0 0 25px 0
                
                p
                    width 45%
                    margin-bottom 0
                    
                    label
                        font-size 1.35rem
                        font-weight 700
                    
                    br
                        display none
                    
                    span
                        display block
                        font-size 1.25rem
                        font-weight normal
                        color #888
                    
                    input
                        border-bottom 2px solid LightGrey
                    
                    textarea
                        border 0
                        border-bottom 2px solid LightGrey
                        border-radius 0
                        height 75px
                
                // radio buttons
                .wt_radio-button
                    & > span
                        display block
                        margin 1em 0
                        
                        span,
                        input
                            display inline !important
                            width auto !important
                    
                .wt_form-description
                    position absolute
                    top 0
                    right 0
                    width 50%
                    
                    a
                        display inline
                        font-weight 700
            
        .main
            float left
            width 50%
            box-sizing border-box
            margin 0 0 0 0
            
            .wt_page-intro
                margin-top 0
            
            .wt_featured-item
                max-width 500px
                margin 2rem auto

// colorful shapes (weave into above elements on desgin pass)
.submit-a-video, .volunteers
    overflow-x hidden

    & > .wt_form-banner::before
        content ""
        background-color transparent
        position absolute
        height 75vh
        left 0
        top 0
        border-left 100vw solid rgb(110,176,255)
        border-bottom 100px solid transparent
        z-index -1

    & > .main
        position relative
        margin-top 600px

        &::after
            content ""
            background-color rgb(196,207,220)
            position absolute
            width 110vw
            height 70%
            bottom -35%
            left -10vw
            z-index -1

