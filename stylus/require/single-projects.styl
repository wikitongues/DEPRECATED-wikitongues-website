body
	&.single-projects		
		.wt_banner
			.wt_banner-message
				width 100%
				margin 0
				
				h1
					bannerh1(center)
			
		.wt_single-projects			
			h1
				width 90%
				max-width 600px
				margin $margin3 auto 0
				text-align left
				
			a
				color $interactive
			
			.giveforms-donation-button
				display block
				width 90%
				max-width 650px
				white-space nowrap
				margin 5rem auto 0 0
				text-align center
				padding 2rem
				font-size 2rem
				font-weight bold
				background-color #4799fc
				border-radius 1rem
				color #fff
				text-transform uppercase
				letter-spacing 0.1rem
				font-family 'Noto Sans', sans-serif
			
			&__copy,
			&__help
				width 90%
				max-width 600px
				margin 5% auto 0
			
			&__videos
				margin 5% auto 10%
				
				h1,
				p
					width 90%
					max-width 600px
					margin-left auto
					margin-right auto
			
		.wt_donate-banner
			padding-bottom 175px
			
			.inner-wrap
				width 90%
				max-width 600px
				
				.giveforms-donation-button
					display block
					width 90%
					max-width 450px
					white-space nowrap
					margin 5rem auto 0
					text-align center
					padding 2rem
					font-size 2rem
					font-weight bold
					background-color #4799fc
					border-radius 1rem
					color #fff
					text-transform uppercase
					letter-spacing 0.1rem
					font-family 'Noto Sans', sans-serif

@media all and (max-width:$mobile)
	body
		&.single-projects
			.wt_single-projects
				h1
					margin-top $margin5 !important