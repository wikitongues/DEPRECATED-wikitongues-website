.wt_archive-podcast
  width 95%
  max-width 768px
  margin 0 auto 15%
  
  &__episode
    padding-bottom 5%
    margin-bottom 5%
    border-bottom 1px solid lightgrey
    overflow auto
    
    &:last-of-type
      border-bottom 0 !important
    
  &__thumbnail
    vertical-align top
    margin-right 2.5%
    float left
    
    img
      height 250px
      width auto
    
  &__meta
    vertical-align top
    overflow hidden
    
  &__title
    font-size 3rem

@media all and (max-width 768px)
  .wt_archive-podcast
    margin-bottom 35% !important
    
    &__thumbnail
      margin 0 auto 2.5% !important
      
      img
        width 100% !important
        height auto !important