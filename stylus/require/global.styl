// variables and functions for recurring font-styles

// old colors, to be phased out
$pink = #FFB6AD
$yellow = #FFDC90
$light_blue = #A8C7FF
$mid_blue = #4799fc
$dark_blue = #0d232f
$white = #ffffff

// current colors
$blue = #11242F
$burgundy = #2E1516
$pewter = #2F3E47
$interactive = #20597A
$white = #ffffff
$offwhite = #e0e5e8

/* fonts */
$sans_serif = objektiv-mk1, sans-serif
$serif = alegreya, serif

/* margins and gutters */
$margin1 = 30px
$margin2 = 60px
$margin3 = 90px
$margin4 = 120px
$margin5 = 180px

/* viewport triggers */
$mobile = 979px

// typography styles
html
	font-size 62.5%

body
	font-size 1.5rem
	color $dark_blue

h1
	font-weight 500
	font-size 4.8rem
	line-height 5.76rem
	font-family $serif

h2
	font-weight 500
	font-size 1.8rem
	line-height 2.16
	font-family $sans_serif
	text-transform uppercase

p
	font-weight 500
	font-size 2.4rem
	line-height 2.88rem
	font-family $serif

a
	text-decoration none

interactive(a)
	font-size 1.5rem
	color a
	font-family $sans_serif
	font-weight 500
	text-transform uppercase

boxShadow()
	box-shadow 0 3px 1px -2px rgba(0 0 0 .2), 0 2px 2px 0 rgba(0 0 0 .14), 0 1px 5px 0 rgba(0 0 0 .12)

boxShadowInset()
	box-shadow inset 0 3px 1px -2px rgba(0 0 0 .2), inset 0 2px 2px 0 rgba(0 0 0 .14), inset 0 1px 5px 0 rgba(0 0 0 .12)

bannerh1(a)
	font-size 7rem
	font-family $sans_serif
	text-shadow 0 0 30px #000
	color $white
	text-align a
	line-height 1.15
	text-transform capitalize
	
