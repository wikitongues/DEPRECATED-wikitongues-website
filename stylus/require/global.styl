// variables and functions for recurring font-styles

// colors
$pink = #FFB6AD
$yellow = #FFDC90
$light_blue = #8FB6FF
$mid_blue = #4799fc
$dark_blue = #0d232f
$white = #ffffff

/* fonts */
$sans_serif = 'Noto Sans', sans-erif
$serif = 'Noto Serif', serif

// typography styles
html
	font-size 62.5%

body
	font-size 1.5rem
	color $dark_blue

h1
	font-weight 700
	font-size 5rem
	line-height 7rem
	font-family $serif

h2
	font-size 2.5rem
	font-family $serif

h3
	//

p
	font-size 1.85rem
	line-height 3rem
	font-family $serif

a
	color $mid_blue
	text-decoration none

bannerh1(a)
	font-size 7rem
	font-family $sans_serif
	text-shadow 0 0 30px #000
	color $white
	text-align a
	line-height 1.15
	text-transform uppercase

bannerh2()
	//

bannerh3()
	//

// interactive
ctaButton()
	display block
	width 90%
	max-width 450px
	white-space nowrap
	text-align center
	padding 2rem
	font-size 2rem
	font-weight bold
	background-color #4799fc
	border-radius 1rem
	color #fff
	text-transform uppercase
	letter-spacing 0.1rem
	font-family $sans_serif

