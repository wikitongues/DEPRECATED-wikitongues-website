.wt_footer
    padding $margin3
    background-color $blue
    color $white
    font-family $sans_serif
    color $white
    font-size 1.4rem
    text-align center
    font-weight 200
    
    &__logo
        margin 0
        text-align center
        
        .logo-img
            vertical-align middle
            width 35px
            height auto
            border-radius 100%
        
        span
            padding-left 5px
            font-weight 700
            letter-spacing 0.05rem
            text-transform uppercase

    &__navigation
        margin $margin2 auto
        width 100%

        ul
            list-style none
            padding 0

            &:last-of-type
                margin-left auto                
            
            li
                display inline-block
                margin 0 10px
                
                a
                    color $white

    &__legal
        width 100%
        margin-bottom 0
        
        a
            display inline
            color $white
            font-weight 900
    
    &__questions
        margin-top $margin2
        
        a
            color $white
    
@media all and (max-width:$mobile)
    .wt_footer
        padding $margin1
        
        &__navigation
            ul
                li
                    display block
        
        &__legal
            br
                display none