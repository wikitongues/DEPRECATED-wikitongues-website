/*
** For general banner layout styles refer to BANNER
*/

body
    &.page-template-template-form
        .wt_form-banner-message
                margin 0 auto 0 10rem
                
                h1
                    text-align left
                    
        // the height of this element doesn't work well
        .wt_form-banner-form
            align-self flex-start
            background-color $text-color-light
            padding 2rem 4rem 4rem
            border-radius 2rem 0 0 2rem
            margin-top 20rem // margin from nav
            max-width 55%
            box-sizing border-box
            
            &>h1
                margin-top 0
            
            .wt_form-section
                position relative
                margin-top 50px
                
                // first div in the form is injected js
                &nth-of-type(2)
                    margin-top 0
                
                input,
                textarea
                    width 100%
                    padding-bottom 5px
                    font-size 1.5rem
                    
                    &:focus
                        outline none
                
                h2
                    width 45%
                    margin 0 0 25px 0
                
                p
                    width 45%
                    margin-bottom 0
                    
                    label
                        font-size 1.35rem
                        font-weight 700
                    
                    br
                        display none
                    
                    span
                        display block
                        font-size 1.25rem
                        font-weight normal
                        color #888
                    
                    input
                        border-bottom 2px solid LightGrey
                    
                    textarea
                        border 0
                        border-bottom 2px solid LightGrey
                        border-radius 0
                        height 75px
                    
                .wt_form-description
                    position absolute
                    top 0
                    right 0
                    width 50%
            
        .main
            width 45%
            box-sizing border-box
            margin 0 0 0 0
            
            .wt_page-intro
                margin-top 0
            
            .wt_featured-item
                max-width 500px
                margin 2rem auto