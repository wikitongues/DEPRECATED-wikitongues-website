.wt_single-languages
    margin-bottom 150px

    &__intro
        position relative
        padding-top $margin2
        text-align center
        background $dark_blue
        color $white
        
        &--names
            h1
                margin $margin1 0 0
            
            h2
                margin 0
            
            p
                margin $margin1 0
                font-style italic
    
    &__content
        // silence is golden
    
    &__submit
        margin $margin1 0
        text-align center
        
        a
            display inline-block
            width 270px
            margin-bottom $margin2
            padding 20px
            interactive($white)
            background $interactive
            border-radius 30px
            
    &__no-videos
        margin-top $margin2
        text-align center

    &__cta
        max-width 500px !important
        margin 5% auto 10% !important
        
    &__lexicon
        margin $margin2 $margin1 $margin3
        
        .wt_lexicon-preview
                &--link
                    color $interactive

    h2
        font-size 2.5rem
        text-align center
        
        &+p
            width 90%
            max-width 730px
            margin 10px auto
            text-align center
            
            a
                font-weight 700
                color $interactive
                display inline !important

@media all and (max-width:768px)
    .wt_single-languages
        &__intro
            // silence is golden
            // margin 15% auto 5% !important
            // min-height 0 !important

        &__pagination
            margin 15% auto 30%	!important
        
        &__lexicon
            margin 0 5%
        
        &__donors
            &--names
                column-count 1