.wt_single-languages
    font-family 'Noto Sans', regular
    font-size 1.5rem
    margin-bottom 150px

    &__intro
        text-align center
        
        &--names
            h1
                margin-bottom 0
            
            h2
                margin-top 10px
                font-size 2.5rem
                font-style italic
            
    &__no-videos
        text-align center

    &__cta
        max-width 500px !important
        margin 5% auto 10% !important
        
    &__lexicon
        margin 2%

    h2
        text-align center
        
        &+p
            width 90%
            margin 10px auto
            text-align center
            
            a
                display inline !important

@media all and (max-width:768px)
    .wt_single-languages
        &__intro
            margin 15% auto 5% !important

        &__pagination
            margin 15% auto 30%	!important
        
        &__lexicon
            margin 0 5%
        
        &__donors
            &--names
                column-count 1