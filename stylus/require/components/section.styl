.wt_page-section
    position relative
    margin-bottom 5%

    .wt_section-content
        position relative
        display flex

        > *
            flex 1
            margin auto

        .wt_section-message
            padding 6rem

            *
                max-width 650px

            h1
                margin 0 auto 2rem
                text-align left

            p
                margin auto

            .wt_cta
                ctaButton()

    .wt_featured-items
        max-width 1460px
        margin 5% auto 0
        

// Switch image and message at each new section
.wt_page-section
    .wt_section-image
        position relative

        .wt_section-image-caption
            position absolute
            top 0
            font-size 1.25rem
            letter-spacing 0.1em
            margin 5px 10px
            position absolute
            color white
            text-shadow 0 0 30px #000

    &:nth-of-type(odd)
        .wt_section-image
            img
                width 100%
                height auto
                border-top-left-radius 0
                border-bottom-left-radius 0
            
            .wt_section-image-caption
                left 0

    &:nth-of-type(even)
        .wt_section-image
            margin 2rem 0 2rem 2rem

            img
                width 100%
                height auto
                border-top-right-radius 0
                border-bottom-right-radius 0
            
            .wt_section-image-caption
                right 0

        .wt_section-message
            order -1

// typography reduction on laptop screens
@media only screen and (max-width: 1280px)
    .wt_page-section
        .wt_section-content
            .wt_section-message
                .wt_cta
                    margin-top 2rem
                    padding 2rem

        .wt_featured-items
            font-size 1.25rem

// Single column and remove image/message switch on smaller screens
@media only screen and (max-width: 979px)
    .wt_page-section
        .wt_section-content
            flex-direction column

            .wt_section-message
                &:nth-of-type(even)
                    order 1

                &:nth-of-type(odd)
                    order -1

            .wt_section-image
                padding 0

                img
                    width 100%
                    border-radius 0 !important