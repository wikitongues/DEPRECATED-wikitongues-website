/* Banner and Form Banner */

.wt_banner
    position relative
    width 100%
    height 98vh
    margin-top -5rem // Position banner on top
    background-size cover !important
    background-attachment fixed !important
    boxShadowInset()
    
    &__content
        position absolute
        bottom -10%
        right 30px
        width 210px
        -webkit-transform translateY(-10%)
        -moz-transform translateY(-10%)
        -ms-transform translateY(-10%)
        -o-transform translateY(-10%)
        transform translateY(-10%)
        background $pewter
        color $white
        padding 40px 60px 50px
        border-radius 2px
        text-shadow 0 0 10px $blue
        boxShadow()
        
        h1
            margin 0 auto $margin1
            padding-bottom $margin1
            border-bottom 1px solid $white
        
        p
            margin 0

    &__scroll
        position absolute
        bottom 30px
        left 30px
        padding 0
        interactive($white)
        text-shadow 0 0 10px $blue
        
        i
            font-size 2.5rem
            margin-right 5px         

