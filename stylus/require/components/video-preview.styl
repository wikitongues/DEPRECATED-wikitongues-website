.wt_video-preview
    display inline-block
    vertical-align top
    width 29%
    margin 2%
    -webkit-box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
    box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
    border-radius 3px
    overflow hidden
    padding-bottom 15px
    font-size 1.2rem
    background #fff

    &__video-thumbnail
        width 100%
        padding-bottom 56%
        background-size 100% !important
        position relative 

        &--empty
            background #6eb0ff

            &::before
                content "This video is not yet available"
                position absolute
                color #fff
                top 50%
                transform translateY(-50%)
                width 100%
                text-align center
                font-weight 700
                font-size 1rem
                letter-spacing 0.1rem
    
    h2
        margin $margin1 0 15px
        interactive($blue)
        text-align left
        font-weight 700

    &__text
        padding 0 20px
        font-family $sans_serif
        font-size 1.5rem
        line-height 1.8rem
        text-transform initial
        font-weight 200

        &--header
            font-weight 700
            margin-bottom 0

        &--p
            margin 5px 0 15px

    &__link
        color #6eb0ff

        &--inline
            display inline

        &:hover
            text-decoration underline

@media all and (max-width:869px)
    .wt_video-preview
        width 45%
        
@media all and (max-width:768px)
    .wt_video-preview
        display block !important
        width 90% !important
        margin 5% auto !important
