.single-projects__revitalization
	.wt_content-block
		width 90%
		max-width 600px
		margin $margin5 auto 0

		p
			line-height 3.6rem
			
			a
				color $white
				background $interactive
				padding 0 5px
		
	.wt_section
		max-width 900px
		margin-left auto
		margin-right auto
		
		&:nth-of-type(2n)
			aside:last-of-type
				margin-left 0
				margin-right 15%
		
		&__aside
			&--image
				width 40% !important
				padding-bottom 40% !important
				
				&:before
					top 4%
			
			&--content
				margin-left 15%

@media all and (max-width:$mobile)
	.single-projects__revitalization
		.wt_content-block
			&:nth-of-type(2)
				margin-top $margin2
				
		.wt_section
			&:nth-of-type(2n)
				.wt_section__aside--image
					float none !important
					width 90% !important
					margin auto !important
					
			&__aside--image
				width 90% !important
				padding-bottom 90% !important
				margin auto !important