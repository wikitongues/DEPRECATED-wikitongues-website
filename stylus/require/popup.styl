.wt_popup-overlay
	display none
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	z-index 100
	background rgba(0,0,0,.55)
	
	.wt_popup-inner
		position relative
		widows 90%
		max-width 550px
		height initial
		margin 100px auto
		background #fff
		padding 50px
		box-sizing border-box
		border-radius 3px
		-webkit-box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
		box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.1)
		
		#close
			position absolute
			top 15px
			right 25px
			font-weight 700
			border 1px solid transparent
			padding 5px 0
			text-transform uppercase
			letter-spacing 0.075rem
			
			&:hover
				border-bottom 1px solid
				
			&:focus
				outline none
	
		.wt_newsletter-signup
			margin 50px auto
			
			h2, p, button
				color $text-color
			
			h2
				width 100%
				text-align center
				text-transform uppercase
				letter-spacing 0.05em

			p
				margin-bottom 0
				font-size 1.75rem
				
			#mc_embed_signup
				h2
					display none
			
			button
				display block
				margin auto
				background 0
				font-weight 700
				border 1px solid transparent
				padding 5px 0
				
				&:hover
					border-bottom 1px solid
					
				&:focus
					outline none