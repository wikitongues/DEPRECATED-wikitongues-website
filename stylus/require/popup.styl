.wt_popup-overlay
	display none
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	z-index 100
	background rgba(255,255,255,.95)
	
	.wt_popup-inner
		position relative
		width 100%
		height 100%
		
		#close
			position absolute
			top 15px
			right 25px
			font-weight 700
			border 1px solid transparent
			padding 5px 0
			text-transform uppercase
			letter-spacing 0.075rem
			
			&:hover
				border-bottom 1px solid
				
			&:focus
				outline none
	
		.wt_newsletter-signup
			position absolute !important
			margin 0 !important
			top 50%
			left 50%
			transform translate(-50%, -50%)
			
			h2, p, button
				color $text-color
			
			h2
				width 100%
				text-align center
				text-transform uppercase
				letter-spacing 0.05em

			p
				margin-bottom 0
				font-size 1.75rem
				
			#mc_embed_signup
				h2
					display none
			
			button
				display block
				margin auto
				background 0
				font-weight 700
				border 1px solid transparent
				padding 5px 0
				
				&:hover
					border-bottom 1px solid
					
				&:focus
					outline none