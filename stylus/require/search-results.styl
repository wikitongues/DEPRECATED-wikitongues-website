.wt_search-results
    &__header
        margin-top 5%

    &__searchform
        text-align center

    &__main
        width 90%
        margin 5% auto 10%

    &__item
        margin-bottom: 2em;

    &__text
        margin-bottom 1em

    &__link
        color #6eb0ff
        margin-bottom 5px

        &:hover
            text-decoration underline

    &__no-search-results
        text-align center
        margin-bottom 10%

    &__all-languages
        text-align center
        margin-bottom 10%

    &__pagination
        margin-bottom 10%

@media only screen and (max-width: 979px)
    .wt_search-results
        &__no-search-results
            margin-bottom 20%

        &__all-languages
            margin-bottom 20%

        &__pagination
            margin-bottom 20%
            
@media only screen and (max-width: 768px)
    .wt_search-results
        &__no-search-results
            margin-bottom 30%

        &__all-languages
            margin-bottom 30%

        &__pagination
            margin-bottom 30%