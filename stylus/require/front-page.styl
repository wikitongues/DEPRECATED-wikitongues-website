body
    &.home
        .wt_banner
            .wt_banner-image-caption
                left 5%
                margin 0
                bottom 5%

        ul.wt_featured-partners
            list-style-type none
            width 80vw
            margin 0 auto 6%
            padding 0
            text-align justify

            li
                width 20%
                padding 2rem
                box-sizing border-box
                display inline-block
                vertical-align middle

                img
                    border-radius 0
                    width 100%
                    height auto

        .wt_page-section
            font-size 1.75rem

            &.primary_content-block
                color $text-color-light
                display inline-block
                width 100%
                position relative
                float left
                z-index 2

                .wt_section-image
                    width 41vw
                    z-index 2

            &#primary_content-block-1
                .wt_section-content
                    .wt_section-image
                        top 10%

                    .wt_section-message
                        margin-top 0%
                        background #ffc342
                        right 0
                        box-sizing initial
                        padding-left 20%
                        padding-bottom 15vh

            &#primary_content-block-2
                margin-bottom 0
                background-color #6eb0ff
                z-index 3

                .wt_section-content
                    margin-top -5vh

                    .wt_section-message
                        .wt_cta
                            background-color $text-color-light
                            color $highlight-color

                            &:hover
                                color $highlight-color

            &#primary_content-block-3
                margin-bottom 0
                background-color rgb(233,144,134)
                padding-top 20%

            .wt_featured-items
                color $text-color !important
                margin-top 0
                padding-top 0
                padding-bottom 0
                display inline-block
                height 300px
                position relative
                z-index 2

                .wt_featured-item
                    width (100/3)%
                    height 525px
                    float left
                    box-sizing border-box
                    padding 10px

            &.news_content-block
                margin-bottom 1rem
                width 100%
                display inline-block

                &:nth-of-type(odd)
                    .wt_section-message
                        margin-right 10vw

                &:nth-of-type(even)
                    .wt_section-message
                        margin-left 10vw

                .wt_section-content
                    background-color #ecf6ff
                    position relative
                    margin-top 10%

                .wt_section-image
                    position absolute
                    top -10%

                .wt_section-message
                    max-width 550px
                    box-sizing border-box

                    h1
                        text-transform unset
                        font-size 3rem
                        line-height initial

                    .wt_cta
                        width initial
                        float left
                        background transparent
                        padding 0
                        color black
                        margin-top 2rem
                        font-weight 400


        #wt_blog-title
            margin -5rem 0 5rem
            color white
            width 100%
            text-align center
            text-transform uppercase
            display inline-block
            position relative
            z-index 2

            &+p
                margin 0
                text-align center

@media all and (max-width:979px)
    body
        &.home
            .wt_banner
                display block

                .wt_banner-message
                    position absolute
                    bottom 20%

                    h1
                        font-size 3rem

                    .wt_cta
                        width 75%
                        padding 2rem 1rem
                        font-size 1.5rem

                .wt_banner-image-caption
                    left -20%
                    bottom 20%
                    transform rotate(-8deg)

            .wt_featured-partners
                display block !important
                text-align center

                li
                    display inline-block
                    width 26% !important
                    margin 2% !important

            .wt_page-section
                .wt_section-image
                    width 100% !important

                    .wt_section-image-caption
                        bottom 0
                        -webkit-transform none
                        -ms-transform none
                        -o-transform none
                        transform none
                        margin 0 0 10px 10px

                .wt_featured-items
                    .wt_featured-item
                        width 100%
                        height auto
                        margin 2% 1%

            #wt_blog-title
                margin-bottom 2rem

@media all and (max-width:450px)
    .wt_banner-image-caption
        transform rotate(-15deg) !important
